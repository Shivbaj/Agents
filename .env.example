# Environment Configuration
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="Multi-Agent System API"
API_VERSION=v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Configuration
DATABASE_URL=sqlite:///./data/agents.db
DATABASE_ECHO=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Model Provider Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Ollama (Local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=60

# Hugging Face
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=./data/models

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# File Storage
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "bmp", "webp", "pdf", "txt", "docx", "mp3", "wav", "mp4", "avi"]

# Agent Configuration
AGENT_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_AGENTS=10
AGENT_MEMORY_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Observability & Monitoring
# LangSmith for agent tracing and observability
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=multi-agent-system

# Prometheus monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Model Specific Settings
# Vision Models
VISION_MODEL_PROVIDER=openai  # openai, anthropic, or ollama
VISION_MODEL_NAME=gpt-4-vision-preview

# Audio Models
AUDIO_MODEL_PROVIDER=openai
WHISPER_MODEL=whisper-1

# Embedding Models
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536